{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schedule.dadyarri.ru/scheduleSchema.json",
  "title": "Schedule schema",
  "type": "object",
  "definitions": {
    "schemaArray": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#"
      }
    },
    "nonNegativeInteger": {
      "type": "integer",
      "minimum": 0
    },
    "nonNegativeIntegerDefault0": {
      "allOf": [
        {
          "$ref": "#/definitions/nonNegativeInteger"
        },
        {
          "default": 0
        }
      ]
    },
    "simpleTypes": {
      "enum": [
        "array",
        "boolean",
        "integer",
        "null",
        "number",
        "object",
        "string"
      ]
    },
    "stringArray": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "uniqueItems": true,
      "default": []
    },
    "dayWeekListItem": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "#/definitions/nonNegativeInteger"
        },
        "day": {
          "$ref": "#/definitions/nonNegativeInteger"
        },
        "timetableId": {
          "$ref": "#/definitions/nonNegativeInteger"
        },
        "week": {
          "$ref": "#/definitions/nonNegativeInteger"
        }
      },
      "required": [
        "id",
        "day",
        "timetableId",
        "week"
      ]
    },
    "examGroupListItem": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "#/definitions/nonNegativeInteger"
        },
        "name": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "name"
      ]
    },
    "lessonListItem": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "#/definitions/nonNegativeInteger"
        },
        "name": {
          "type": "string"
        },
        "color": {
          "type": "integer",
          "minimum": 0,
          "maximum": 16
        }
      },
      "required": [
        "id",
        "name"
      ]
    },
    "roomListItem": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "#/definitions/nonNegativeInteger"
        },
        "name": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "name"
      ]
    },
    "typeListItem": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "#/definitions/nonNegativeInteger"
        },
        "name": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "name"
      ]
    },
    "teacherListItem": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "#/definitions/nonNegativeInteger"
        },
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string",
          "pattern": "^[^@ \t\r\n]+@[^@ \t\r\n]+.[^@ \t\r\n]+$"
        },
        "phone": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "name"
      ]
    },
    "time": {
      "type": "string",
      "pattern": "^[0-9]{2}:[0-9]{2}$"
    },
    "timeListItem": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "#/definitions/nonNegativeInteger"
        },
        "number": {
          "$ref": "#/definitions/nonNegativeInteger"
        },
        "start": {
          "$ref": "#/definitions/time"
        },
        "end": {
          "$ref": "#/definitions/time"
        }
      },
      "required": [
        "id",
        "start",
        "end"
      ]
    },
    "date": {
      "type": "string",
      "pattern": "[Jan|Feb|Mar|Apr|May|Jun|Jul|Aug|Sep|Oct|Nov|Dec] [0-9]{2}, [0-9]{4} [0-9]{2}:[0-9]{2}:[0-9]{2}"
    },
    "timetableListItem": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "#/definitions/nonNegativeInteger"
        },
        "lessonId": {
          "$ref": "#/definitions/nonNegativeInteger"
        },
        "roomId": {
          "$ref": "#/definitions/nonNegativeInteger"
        },
        "teacherId": {
          "$ref": "#/definitions/nonNegativeInteger"
        },
        "timeId": {
          "$ref": "#/definitions/nonNegativeInteger"
        },
        "typeId": {
          "$ref": "#/definitions/nonNegativeInteger"
        },
        "dateStart": {
          "$ref": "#/definitions/date"
        },
        "dateEnd": {
          "$ref": "#/definitions/date"
        }
      },
      "required": [
        "id",
        "lessonId",
        "timeId"
      ]
    },
    "weekendListItem": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "#/definitions/nonNegativeInteger"
        },
        "name": {
          "type": "string"
        },
        "dateStart": {
          "$ref": "#/definitions/date"
        },
        "dateEnd": {
          "$ref": "#/definitions/date"
        }
      },
      "required": [
        "id",
        "name",
        "dateStart",
        "dateEnd"
      ]
    },
    "attendListItem": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "#/definitions/nonNegativeInteger"
        },
        "date": {
          "$ref": "#/definitions/date"
        },
        "lessonId": {
          "$ref": "#/definitions/nonNegativeInteger"
        },
        "timeId": {
          "$ref": "#/definitions/nonNegativeInteger"
        }
      },
      "required": ["id", "date", "lessonId", "timeId"]
    },
    "dateListItem": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "#/definitions/nonNegativeInteger"
        },
        "date": {
          "$ref": "#/definitions/date"
        },
        "timetableId": {
          "$ref": "#/definitions/nonNegativeInteger"
        }
      },
      "required": ["id", "date", "timetableId"]
    },
    "examListItem": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "#/definitions/nonNegativeInteger"
        },
        "status": {
          "type": "boolean"
        },
        "time": {
          "$ref": "#/definitions/time"
        },
        "date": {
          "$ref": "#/definitions/date"
        },
        "groupId": {
          "$ref": "#/definitions/nonNegativeInteger"
        },
        "lessonId": {
          "$ref": "#/definitions/nonNegativeInteger"
        },
        "teacherId": {
          "$ref": "#/definitions/nonNegativeInteger"
        },
        "roomId": {
          "$ref": "#/definitions/nonNegativeInteger"
        },
        "gradeId": {
          "$ref": "#/definitions/nonNegativeInteger"
        }
      },
      "required": ["id", "status", "groupId", "lessonId"]
    },
    "gradeListItem": {
      "type": "object",
      "properties": {
        "gradeId": {
          "$ref": "#/definitions/nonNegativeInteger"
        },
        "gradeValue": {
          "type": "integer",
          "minimum": -100,
          "maximum": 1000
        }
      },
      "required": ["gradeId", "gradeValue"]
    },
    "gradeStatisticListItem": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "#/definitions/nonNegativeInteger"
        },
        "date": {
          "$ref": "#/definitions/date"
        },
        "description": {
          "type": "string"
        },
        "weight": {
          "type": "integer",
          "minimum": 1,
          "maximum": 1000
        },
        "gradeId": {
          "$ref": "#/definitions/nonNegativeInteger"
        },
        "lessonId": {
          "$ref": "#/definitions/nonNegativeInteger"
        }
      },
      "required": ["id", "weight", "gradeId", "lessonId"]
    },
    "homeworkListItem": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "#/definitions/nonNegativeInteger"
        },
        "name": {
          "type": "string"
        },
        "date": {
          "$ref": "#/definitions/date"
        },
        "status": {
          "type": "boolean"
        },
        "description": {
          "type": "string"
        },
        "typeId": {
          "$ref": "#/definitions/nonNegativeInteger"
        },
        "lessonId": {
          "$ref": "#/definitions/nonNegativeInteger"
        }
      },
      "required": ["id", "name", "status", "lessonId", "typeId"]
    },
    "imageListItem": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "#/definitions/nonNegativeInteger"
        },
        "homeworkId": {
          "$ref": "#/definitions/nonNegativeInteger"
        },
        "uri": {
          "type": "string",
          "pattern": "^file:///[-a-zA-Z0-9@:%._+~#=/]*$"
        }
      },
      "required": ["id", "homeworkId", "uri"]
    },
    "noteListItem": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "#/definitions/nonNegativeInteger"
        },
        "text": {
          "type": "string"
        },
        "date": {
          "$ref": "#/definitions/date"
        },
        "timeId": {
          "$ref": "#/definitions/nonNegativeInteger"
        },
        "lessonId": {
          "$ref": "#/definitions/nonNegativeInteger"
        }
      },
      "required": ["id", "text", "date", "timeId", "lessonId"]
    }
  },
  "properties": {
    "attendList": {
      "description": "List of attendees of a student",
      "type": "array",
      "items": {
        "$ref": "#/definitions/attendListItem"
      }
    },
    "dayWeekList": {
      "description": "List of positions of classes by day/week",
      "type": "array",
      "items": {
        "$ref": "#/definitions/dayWeekListItem"
      }
    },
    "dateList": {
      "description": "List of dates, when classes is visible",
      "type": "array",
      "items": {
        "$ref": "#/definitions/dateListItem"
      }
    },
    "examGroupList": {
      "description": "List of group of exams",
      "type": "array",
      "items": {
        "$ref": "#/definitions/examGroupListItem"
      }
    },
    "examList": {
      "description": "List of exams",
      "type": "array",
      "items": {
        "$ref": "#/definitions/examListItem"
      }
    },
    "gradeList": {
      "description": "List of grades",
      "type": "array",
      "items": {
        "$ref": "#/definitions/gradeListItem"
      }
    },
    "gradeStatisticList": {
      "description": "List of statistics of grades",
      "type": "array",
      "items": {
        "$ref": "#/definitions/gradeStatisticListItem"
      }
    },
    "homeworkList": {
      "description": "List of statistics of grades",
      "type": "array",
      "items": {
        "$ref": "#/definitions/homeworkListItem"
      }
    },
    "imageList": {
      "description": "List of images",
      "type": "array",
      "items": {
        "$ref": "#/definitions/imageListItem"
      }
    },
    "lessonList": {
      "description": "List of lessons",
      "type": "array",
      "items": {
        "$ref": "#/definitions/lessonListItem"
      }
    },
    "noteList": {
      "description": "List of notes",
      "type": "array",
      "items": {
        "$ref": "#/definitions/noteListItem"
      }
    },
    "roomList": {
      "description": "List of rooms",
      "type": "array",
      "items": {
        "$ref": "#/definitions/roomListItem"
      }
    },
    "typeList": {
      "description": "List of lesson's types",
      "type": "array",
      "items": {
        "$ref": "#/definitions/typeListItem"
      }
    },
    "teacherList": {
      "description": "List of teachers",
      "type": "array",
      "items": {
        "$ref": "#/definitions/teacherListItem"
      }
    },
    "timeList": {
      "description": "List of time",
      "type": "array",
      "items": {
        "$ref": "#/definitions/timeListItem"
      }
    },
    "version": {
      "description": "Version of the document",
      "$ref": "#/definitions/nonNegativeInteger"
    },
    "weekendList": {
      "description": "List of weekends",
      "type": "array",
      "items": {
        "$ref": "#/definitions/weekendListItem"
      }
    }
  },
  "required": [
    "attendList",
    "dayWeekList",
    "dateList",
    "examGroupList",
    "examList",
    "gradeList",
    "gradeStatisticList",
    "homeworkList",
    "lessonList",
    "noteList",
    "roomList",
    "teacherList",
    "typeList",
    "timetableList",
    "version",
    "weekendList"
  ]
}